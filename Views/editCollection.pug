extends admin.pug

block modalScript
    script(src = "../Scripts/editCollection.js")
    
block modal
    div#shadow
    modal.modal#col_edit_modal
        div#error
        p.text.modal_field_label Title
        input(name = "title", type = "text", value = `${col.title}`)#col_title
        br
        p.text.modal_field_label Description
        textarea(name = "description")#col_desc #{col.description}
        br
        button(type = "button").submit#submit_col Submit
        button(type = "button").cancel#cancel_col Cancel
        
